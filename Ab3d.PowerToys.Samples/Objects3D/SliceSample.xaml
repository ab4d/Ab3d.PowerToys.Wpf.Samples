<Page x:Class="Ab3d.PowerToys.Samples.Objects3D.SliceSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Ab3d.Controls;assembly=Ab3d.PowerToys"
             xmlns:cameras="clr-namespace:Ab3d.Cameras;assembly=Ab3d.PowerToys"
             xmlns:ab3d="clr-namespace:Ab3d.Controls;assembly=Ab3d.PowerToys"  
             xmlns:visuals="clr-namespace:Ab3d.Visuals;assembly=Ab3d.PowerToys"
             xmlns:common="clr-namespace:Ab3d.PowerToys.Samples.Common"
             mc:Ignorable="d" 
             Title="SliceSample"
             d:DesignHeight="500" d:DesignWidth="700">
    <Grid>
        <Border Name="ViewportBorder" Background="Transparent">
            <Viewport3D Name="MainViewport">
                <visuals:ContentVisual3D x:Name="SliceOnPlaneVisual3D" />

                <visuals:ContentVisual3D x:Name="FrontVisual3D" />
                <visuals:ContentVisual3D x:Name="BackVisual3D" />

                <visuals:MultiLineVisual3D x:Name="WireframeVisual3D" LineThickness="1" LineColor="Black" />

                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <Model3DGroup>
                            <AmbientLight Color="#333333"/>
                        </Model3DGroup>
                    </ModelVisual3D.Content>
                </ModelVisual3D>
            </Viewport3D>
        </Border>

        <cameras:TargetPositionCamera Name="Camera1" 
                                      Heading="50" Attitude="-20" Bank="0" Distance="500" TargetPosition="0 0 0" 
                                      ShowCameraLight="Always"
                                      TargetViewport3D="{Binding ElementName=MainViewport}"/>

        <ab3d:MouseCameraController Name="MouseCameraController1" 
                                    RotateCameraConditions="LeftMouseButtonPressed"
                                    MoveCameraConditions="LeftMouseButtonPressed, ControlKey"
                                    EventsSourceElement="{Binding ElementName=ViewportBorder}"
                                    CameraSmoothing="Normal" TargetCamera="{Binding ElementName=Camera1}"/>

        <controls:CameraAxisPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" TargetCamera="{Binding ElementName=Camera1}" />


        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10">

            <Border Name="Slice2DBorder" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10 10 0 10" BorderBrush="Black" BorderThickness="1" Background="#55FFFFFF">
                <Canvas Name="Slice2DCanvas" Margin="5" Width="150" Height="150" />
            </Border>

            <Border VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" BorderBrush="Black" BorderThickness="1" Background="#55FFFFFF">
                <StackPanel Orientation="Vertical" Margin="10 5" Width="170">

                    <TextBlock Text="View:" FontWeight="Bold" Margin="0 0 0 3" />
                    <CheckBox Name="ShowWireframeCheckBox" Content="Show wireframe" IsChecked="False" Margin="0 0 0 0" Checked="OnUpdateSlicedModels" Unchecked="OnUpdateSlicedModels" />
                    <CheckBox Name="ShowFrontCheckBox" Content="Show front" IsChecked="True" Margin="0 6 0 0" Checked="OnUpdateSlicedModels" Unchecked="OnUpdateSlicedModels" />
                    <CheckBox Name="ShowBackCheckBox" Content="Show back" IsChecked="True" Margin="0 3 0 0" Checked="OnUpdateSlicedModels" Unchecked="OnUpdateSlicedModels" />
                    <CheckBox Name="ShowSliceMeshCheckBox" Content="Show slice mesh on plane" IsChecked="True" Margin="0 3 0 0" Checked="OnUpdateSlicedModels" Unchecked="OnUpdateSlicedModels" />
                    <CheckBox Name="CloseMeshesCheckBox" Content="Close meshes" IsChecked="False" Margin="0 3 0 0" Checked="OnUpdateSlicedModels" Unchecked="OnUpdateSlicedModels" />
                    <CheckBox Name="Show2DSliceCheckBox" Content="Show 2D slice" IsChecked="True" Margin="0 3 0 0" Checked="OnShow2DSliceCheckBoxChanged" Unchecked="OnShow2DSliceCheckBoxChanged" />


                    <TextBlock Text="3D model:" FontWeight="Bold" Margin="0 10 0 3" />
                    <RadioButton Name="SphereModelRadioButton" Content="Sphere" GroupName="ModelType" Margin="0 0 0 3" Checked="OnModelTypeChecked" />

                    <StackPanel Orientation="Horizontal" Margin="0 0 0 3">
                        <RadioButton Name="TeapotModelRadioButton" Content="Teapot" GroupName="ModelType" Checked="OnModelTypeChecked" />
                        <common:InfoControl InfoText="Teapot model demonstrates how a 3D model with not fully connected polygons can be sliced.&#x0a;Note that mesh cannot be closed when the polygons are not closed.&#x0a;To see that set the plane's normal to (1,0,0) and adjust the Transformation slider." Margin="3 0 0 0" />
                    </StackPanel>

                    <RadioButton Name="MultiVisualsModelRadioButton" Content="Multiple Visual3D objects" IsChecked="True" GroupName="ModelType" Margin="0 0 0 3" Checked="OnModelTypeChecked" />

                    <StackPanel Orientation="Horizontal" Margin="0 0 0 3">
                        <RadioButton Name="RobotarmModelRadioButton" Content="Robotarm" GroupName="ModelType" Margin="0 0 0 3" Checked="OnModelTypeChecked" />
                        <common:InfoControl InfoText="Note that the teapot model cannot be closed because the model is not fully connected.&#x0a;Check the 'Teapot' RadioButton for closer investigation of that problem." Margin="3 0 0 0" />
                    </StackPanel>

                    <TextBlock Text="Plane for slicing:" FontWeight="Bold" Margin="0 10 0 3" />
                    <StackPanel Name="PlanesPanel" Orientation="Vertical" />

                    <TextBlock Text="Transform:" FontWeight="Bold" Margin="0 10 0 0" />

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Transformation amount:" Margin="0 0 3 0" />
                        <TextBlock Name="TransformationAmountTextBlock"></TextBlock>
                    </StackPanel>
                    <Slider Name="SlicePlaneSlider" Minimum="0" Maximum="100" Value="60" ValueChanged="OnUpdateSlicedModels"></Slider>

                    <RadioButton Name="TranslateTransformRadioButton" Content="Translate" IsChecked="True" Margin="0 5 0 0" GroupName="PlaneTransform" Checked="OnUpdateSlicedModels" />
                    <RadioButton Name="RotateTransformRadioButton" Content="Rotate" GroupName="PlaneTransform" Checked="OnUpdateSlicedModels" />
                </StackPanel>
            </Border>
        </StackPanel>

        <TextBlock FontWeight="Bold" Grid.Column="0" FontSize="20" Foreground="Black" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left"
                   Text="Slice 3D model with a plane"/>
    </Grid>
</Page>
