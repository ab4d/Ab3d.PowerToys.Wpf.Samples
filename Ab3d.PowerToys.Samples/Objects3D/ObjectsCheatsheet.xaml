                <TextBlock Foreground="{StaticResource VisualTextColor}" FontWeight="Bold" Margin="5 0" Text="xmlns:visuals=&quot;clr-namespace:Ab3d.Visuals;assembly=Ab3d.PowerToys&quot;"/>
                <TextBlock Foreground="{StaticResource UIElementTextColor}" FontWeight="Bold" Margin="5 0" Text="xmlns:uiElements=&quot;clr-namespace:Ab3d.UIElements;assembly=Ab3d.PowerToys&quot;"/>


