<Page x:Class="Ab3d.PowerToys.Samples.Objects3D.ObjectsCheatsheet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cameras="clr-namespace:Ab3d.Cameras;assembly=Ab3d.PowerToys"
    xmlns:visuals="clr-namespace:Ab3d.Visuals;assembly=Ab3d.PowerToys" 
    xmlns:uiElements="clr-namespace:Ab3d.UIElements;assembly=Ab3d.PowerToys"    
    Title="ObjectsCheatsheet">
    <Page.Resources>
        <SolidColorBrush x:Key="VisualTextColor" Color="#0F253F"/>
        <SolidColorBrush x:Key="UIElementTextColor" Color="#284E7C"/>
        <SolidColorBrush x:Key="CodeTextColor" Color="#4F81BD"/>
    </Page.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible">
        <StackPanel Name="MainStackPanel">
            <Grid Name="TitleGrid" Margin="20 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock FontWeight="Bold" FontSize="20" Margin="2 5 5 0" Text="Main Ab3d.PowerToys 3D Objects"/>
                <Button Name="PrintButton" Width="100" Click="InvokePrint">Print</Button>
            </Grid>

            <StackPanel Name="IntroPanel" Margin="20 0">
                <TextBlock Margin="2 20 5 0" FontWeight="Bold" Text="All 3D objects in Ab3d.PowerToys library can be defined in three different ways:"/>

                <TextBlock Foreground="{StaticResource VisualTextColor}" FontWeight="Bold" Margin="2 5 0 0" Text="1) as Visual3D objects"/>
                <TextBlock Foreground="{StaticResource VisualTextColor}" Margin="20 0" Text="- can be defined in XAML and in code behind"/>
                <TextBlock Foreground="{StaticResource VisualTextColor}" Margin="20 0" Text="- previewed in Visual Studio Designer"/>
                <TextBlock Foreground="{StaticResource VisualTextColor}" Margin="20 0" Text="- lightweight - recommended when no events are needed on the object or when used with EventManager3D"/>

                <TextBlock Foreground="{StaticResource UIElementTextColor}" FontWeight="Bold" Margin="2 5 0 0" Text="2) as UIElement3D objects"/>
                <TextBlock Foreground="{StaticResource UIElementTextColor}" Margin="20 0" Text="- can be defined in XAML and in code behind"/>
                <TextBlock Foreground="{StaticResource UIElementTextColor}" Margin="20 0" Text="- previewed in Visual Studio Designer"/>
                <TextBlock Foreground="{StaticResource UIElementTextColor}" Margin="20 0" Text="- support ToolTip property to show ToolTip on 3D object"/>
                <TextBlock Foreground="{StaticResource UIElementTextColor}" Margin="20 0" Text="- added some support for mouse events (without need to use EventManager3D)"/>

                <TextBlock Foreground="{StaticResource CodeTextColor}" FontWeight="Bold" Margin="2 5 0 0" Text="3) as GeometryModel3D with Model3DFactory"/>
                <TextBlock Foreground="{StaticResource CodeTextColor}" Margin="20 0" Text="- can be defined only in code behind"/>
                <TextBlock Foreground="{StaticResource CodeTextColor}" Margin="20 0" Text="- no previewed in Visual Studio Designer"/>
                <TextBlock Foreground="{StaticResource CodeTextColor}" Margin="20 0" Text="- the most lightwight 3D objects"/>
                <TextBlock Foreground="{StaticResource CodeTextColor}" Margin="20 0" Text="- can be simply added to existing Model3DGroup objects (for example for objects imported from 3ds file)"/>
            </StackPanel>

            <StackPanel Name="FirstPage" Margin="20 0">

