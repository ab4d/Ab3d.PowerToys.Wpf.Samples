<Page x:Class="Ab3d.PowerToys.Samples.MouseCameraControllerSamples.CameraSmoothingSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:cameras="clr-namespace:Ab3d.Cameras;assembly=Ab3d.PowerToys"
      xmlns:ab3d="clr-namespace:Ab3d.Controls;assembly=Ab3d.PowerToys"  
      xmlns:visuals="clr-namespace:Ab3d.Visuals;assembly=Ab3d.PowerToys"
      xmlns:common="clr-namespace:Ab3d.PowerToys.Samples.Common"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000">
    <Grid Name="RootGrid">
        <Border Name="Viewport1Border" Background="Transparent" BorderBrush="Black" BorderThickness="2" Margin="10 10 5 10">

            <Viewport3D Name="MainViewport1">
                <visuals:BoxVisual3D CenterPosition="0 15 0" Size="60 30 40" Material="LightGreen" />
                <visuals:SphereVisual3D CenterPosition="100 15 0" Radius="30" Material="SkyBlue"/>
                <visuals:PyramidVisual3D BottomCenterPosition="-100 0 0" Size="50 50 50" Material="Gold"/>

                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <Model3DGroup>
                            <AmbientLight Color="#333333"/>
                        </Model3DGroup>
                    </ModelVisual3D.Content>
                </ModelVisual3D>
            </Viewport3D>
        </Border>

        <cameras:TargetPositionCamera Name="Camera1"
                                      TargetPosition="0 0 0" 
                                      Heading="30" Attitude="-30" Bank="0" 
                                      Distance="400" 
                                      CameraWidth="400" 
                                      FieldOfView="45"
                                      ShowCameraLight="Always"
                                      TargetViewport3D="{Binding ElementName=MainViewport1}"/>

        <ab3d:MouseCameraController Name="MouseCameraController1"
                                    RotateCameraConditions="LeftMouseButtonPressed"
                                    MoveCameraConditions="LeftMouseButtonPressed, ControlKey"
                                    QuickZoomConditions="LeftMouseButtonPressed, RightMouseButtonPressed"
                                    RotateAroundMousePosition="true"
                                    ZoomMode="MousePosition"
                                    EventsSourceElement="{Binding ElementName=Viewport1Border}"
                                    CameraSmoothing="Normal" TargetCamera="{Binding ElementName=Camera1}" />

        <ab3d:MouseCameraControllerInfo Name="MouseCameraControllerInfo1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="15" ShowQuickZoomInfo="True"
                                        MouseCameraController="{Binding ElementName=MouseCameraController1}"></ab3d:MouseCameraControllerInfo>


        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 0 20 20">

            <StackPanel Orientation="Horizontal" Margin="0 2 0 0" HorizontalAlignment="Right">
                <TextBlock Text="Camera smoothing:" FontWeight="Bold" FontSize="13" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <ComboBox Name="PresetComboBox" Width="100" SelectedIndex="1" Margin="10 0 0 0" SelectionChanged="PresetComboBox_OnSelectionChanged">
                    <ComboBoxItem>Disabled</ComboBoxItem>
                    <ComboBoxItem>Slow</ComboBoxItem>
                    <ComboBoxItem>Normal</ComboBoxItem>
                    <ComboBoxItem>Fast</ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <Border BorderBrush="Black" BorderThickness="2" Margin="0 5 0 0" Background="#AAFFFFFF">
                <Canvas Name="PreviewCanvas" Width="270" Height="150" ClipToBounds="True" />
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 3 5 0">
                <TextBlock Text="Heading:" Margin="0 0 0 0" FontSize="13" Foreground="Green" />
                <TextBlock Name="HeadingValueTextBlock" Margin="0 0 8 0" Width="30" FontSize="13" TextAlignment="Right" />

                <TextBlock Text="Attitude:" Margin="0 0 0 0" FontSize="13" Foreground="Blue"/>
                <TextBlock Name="AttitudeValueTextBlock" Margin="0 0 8 0" Width="30" FontSize="13" TextAlignment="Right" />

                <TextBlock Text="Distance:" Margin="0 0 0 0" FontSize="13"/>
                <TextBlock Name="DistanceValueTextBlock" Width="40" FontSize="13" TextAlignment="Right" />
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 3 5 0">
                <TextBlock Text="Offset:" Margin="0 0 0 0" FontSize="13" />
                <TextBlock Name="OffsetValueTextBlock" Margin="0 0 4 0" Width="90" FontSize="13" TextAlignment="Right" />

                <TextBlock Text="(not shown on graph)" Margin="0 0 0 0" FontSize="13" Foreground="DimGray"/>
            </StackPanel>
        </StackPanel>


        <TextBlock Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20" TextWrapping="Wrap"
                   FontSize="16" FontWeight="Bold" Foreground="#444"
                   Text="Smooth camera rotation, movement and zooming"/>
    </Grid>
</Page>
