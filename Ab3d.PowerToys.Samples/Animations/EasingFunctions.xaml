<Page x:Class="Ab3d.PowerToys.Samples.Animations.EasingFunctions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ab3d.PowerToys.Samples.Animations"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="EasingFunctions">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Different easing functions (defined in Ab3d.Animation.EasingFunctions class)" FontWeight="Bold" FontSize="22" Foreground="DimGray" />
                <WrapPanel Name="GraphsWrapPanel" HorizontalAlignment="Left" Orientation="Horizontal" Margin="0 30 20 0" Width="650" />

                <TextBlock Text="Easing function example (CubicEaseInOutFunction):" Margin="0 30 0 0"/>
                <TextBox Name="EasingExampleTextBox" FontFamily="Consolas"></TextBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
