<Page x:Class="Ab3d.PowerToys.Samples.Graph3D.Graph3DIntroPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:common="clr-namespace:Ab3d.PowerToys.Samples.Common"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Background="{StaticResource GrayTitlePageGradient}"
      Title="UtilitiesIntroPage">
    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="20 10">
                <common:TextBlockEx Style="{StaticResource InfoTitle}">\!3D Graphs\!</common:TextBlockEx>
                <common:TextBlockEx Style="{StaticResource InfoContent}">
                    This section shows a few sample 3D graphs and the building blocks that you can use to show 3D axes.
                </common:TextBlockEx>
            </StackPanel>
        </ScrollViewer>            
    </Grid>
</Page>